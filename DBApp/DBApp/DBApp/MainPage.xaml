            <Label Text="Flicks App" HorizontalTextAlignment="Center" TextColor="White" FontSize="40" FontFamily="Century Gothic"/>
        </Frame>
        <Image Source="mascaras.png"
               HeightRequest="80"
               HorizontalOptions="Center"
               Aspect="Fill"
               />
