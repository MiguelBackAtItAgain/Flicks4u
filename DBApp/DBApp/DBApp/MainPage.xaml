        <Label Text="Email" FontSize="16" Padding="30,0,30,0"/>
        <Entry Margin="30,0,30,0" x:Name="Txt_Usuariolog"/>
        <Label Text="Contrasenia" FontSize="16" Padding="30,0,30,0"/>
        <Entry IsPassword="True" Margin="30,0,30,0" x:Name="Txt_Password"/>
        <Label/>
        <Label Margin="30,0,30,0" x:Name="mext" />
        
    

        <Button Text="Login" CornerRadius="50" Margin="50" BackgroundColor="#2dc6d6" Clicked="ingresoclk" />
